<h1>Todos</h1>

<% if @todos.any? %>
  <ul class='todos'>
    <% @todos.each do |todo| %>
      <li class="<%= 'completed' if todo.completed? %>">
        <%= todo.title %>
        <% if todo.completed? %>
        <% else %>
          <%= link_to 'Mark complete', todo_completion_path(todo) %>
        <% end %>
      </li>
    <% end %>
  </ul>
<% end %>
<%= link_to 'Add a new todo', new_todo_path %>
